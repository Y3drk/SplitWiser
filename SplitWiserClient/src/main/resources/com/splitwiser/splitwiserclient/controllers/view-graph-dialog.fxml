<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane BorderPane.alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.splitwiser.splitwiserclient.controllers.ViewGraphController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <Pane fx:id="GraphPane" prefHeight="800" prefWidth="800" minHeight="500" minWidth="500"/>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20.0">
            <Label fx:id="descriptionLabel"/>
            <Button onAction="#handleComebackAction" prefWidth="150.0" text="Back to Summary" styleClass="cancelButton"
                    stylesheets="css/guiStyles.css">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </bottom>
</BorderPane>

