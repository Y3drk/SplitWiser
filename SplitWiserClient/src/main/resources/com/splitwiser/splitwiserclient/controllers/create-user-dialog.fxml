<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<BorderPane BorderPane.alignment="CENTER" prefHeight="500.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.splitwiser.splitwiserclient.controllers.CreateUserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20.0">
                <Label>first name:</Label>
                <TextField fx:id="firstNameTextField">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20.0">
                <Label>first name:</Label>
                <TextField fx:id="lastNameTextField">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20.0">
                <children>
                    <Label>Group: </Label>
                    <ListView fx:id="groupsList" prefHeight="150.0" prefWidth="100.0"/>
                </children>
            </HBox>
            <HBox  alignment="CENTER" spacing="10.0" style="-fx-padding: 20.0">
                <Button fx:id="createUserButton" onAction="#handleCreateAction" prefWidth="60.0" text="Create"
                        styleClass="clickableButton" stylesheets="css/guiStyles.css">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <Button onAction="#handleCancelAction" prefWidth="60.0" text="Cancel" styleClass="cancelButton"
                        stylesheets="css/guiStyles.css">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>

